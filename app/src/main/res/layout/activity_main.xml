<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/textView"

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Tambah Negara"
        android:textSize="24sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.062" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginTop="24dp"
        android:layout_marginEnd="40dp"
        android:text="Nama Negara"
        android:textSize="18sp"
        app:layout_constraintEnd_toStartOf="@+id/textView"
        app:layout_constraintHorizontal_bias="0.245"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:text="Presiden"
        android:textSize="18sp"
        app:layout_constraintStart_toStartOf="@+id/setNegara"
        app:layout_constraintTop_toBottomOf="@+id/setNegara" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:text="Benua"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="@+id/setPresiden"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/setPresiden"
        app:layout_constraintTop_toBottomOf="@+id/setPresiden" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:text="Populasi"
        android:textSize="18sp"
        app:layout_constraintStart_toStartOf="@+id/setBenua"
        app:layout_constraintTop_toBottomOf="@+id/setBenua" />

    <EditText
        android:id="@+id/setNegara"
        android:layout_width="390dp"
        android:layout_height="48dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:ems="10"
        android:inputType="textPersonName"
        app:layout_constraintEnd_toEndOf="@+id/textView2"
        app:layout_constraintHorizontal_bias="0.026"
        app:layout_constraintStart_toStartOf="@+id/textView2"
        app:layout_constraintTop_toBottomOf="@+id/textView2" />

    <Spinner
        android:id="@+id/setBenua"
        android:layout_width="390dp"
        android:layout_height="48dp"
        android:layout_marginTop="8dp"
        android:entries="@array/dftrBenua"
        app:layout_constraintEnd_toEndOf="@+id/textView4"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/textView4"
        app:layout_constraintTop_toBottomOf="@+id/textView4" />

    <Button
        android:id="@+id/buttonSimpan"
        android:layout_width="180dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="SIMPAN"
        app:layout_constraintStart_toStartOf="@+id/setPopulasi"
        app:layout_constraintTop_toBottomOf="@+id/setPopulasi" />

    <Button
        android:id="@+id/buttonEdit"
        android:layout_width="180dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="SIMPAN UPDATE"
        app:layout_constraintStart_toStartOf="@+id/setId"
        app:layout_constraintTop_toBottomOf="@+id/setId" />

    <EditText
        android:id="@+id/setId"
        android:layout_width="390dp"
        android:layout_height="40dp"
        android:layout_marginTop="70dp"
        android:ems="10"
        android:hint="Masukan Id"
        android:inputType="textPersonName"
        app:layout_constraintEnd_toEndOf="@+id/setPopulasi"
        app:layout_constraintStart_toStartOf="@+id/setPopulasi"
        app:layout_constraintTop_toBottomOf="@+id/setPopulasi" />

    <Button
        android:id="@+id/btn_activity_main_pindah"
        android:layout_width="180dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginStart="28dp"
        android:layout_marginTop="8dp"
        android:onClick="Pindah"
        android:text="Tampil Data"
        app:layout_constraintEnd_toEndOf="@+id/setPopulasi"
        app:layout_constraintStart_toEndOf="@+id/buttonSimpan"
        app:layout_constraintTop_toBottomOf="@+id/setPopulasi" />

    <Button
        android:id="@+id/buttonDelete"
        android:layout_width="180dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="DELETE"
        app:layout_constraintEnd_toEndOf="@+id/setId"
        app:layout_constraintTop_toBottomOf="@+id/setId" />

    <EditText
        android:id="@+id/setPresiden"
        android:layout_width="390dp"
        android:layout_height="48dp"
        android:layout_marginTop="8dp"
        android:ems="10"
        android:inputType="textPersonName"
        app:layout_constraintEnd_toEndOf="@+id/textView3"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/textView3"
        app:layout_constraintTop_toBottomOf="@+id/textView3" />

    <EditText
        android:id="@+id/setPopulasi"
        android:layout_width="390dp"
        android:layout_height="48dp"
        android:layout_marginTop="8dp"
        android:ems="10"
        android:inputType="number"
        app:layout_constraintEnd_toEndOf="@+id/textView5"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/textView5"
        app:layout_constraintTop_toBottomOf="@+id/textView5" />

</androidx.constraintlayout.widget.ConstraintLayout>